				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"200 OK\", () => pm.response.to.have.status(200));\r",
									"\r",
									"const d = pm.response.json();\r",
									"\r",
									"if (d.token) {\r",
									"  pm.environment.set(\"accessToken\", d.token);\r",
									"\r",
									"  try {\r",
									"    const parts = d.token.split(\".\");\r",
									"    if (parts.length === 3) {\r",
									"      const payload = JSON.parse(\r",
									"        atob(parts[1].replace(/-/g, \"+\").replace(/_/g, \"/\"))\r",
									"      );\r",
									"      const uid = payload.sub || payload.userId || payload.id;\r",
									"      if (uid) pm.environment.set(\"userId\", String(uid));\r",
									"    }\r",
									"  } catch (e) {  }\r",
									"}\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
